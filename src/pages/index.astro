---
export const prerender = true;

import Testimonials from '../components/Testimonials.astro';
import BookingCTA from '../components/BookingCTA.astro';
import AnalyticsPlausible from '../components/AnalyticsPlausible.astro';
import Container from '../components/Container.astro';
import Panel from '../components/Panel.astro';
import Badge from '../components/Badge.astro';
import MiniMetric from '../components/MiniMetric.astro';
import CoachIdentity from '../components/CoachIdentity.astro';
import WhatYouGet from '../components/WhatYouGet.astro';
import offer from '../data/offer.json';
import caseStudies from '../data/case_studies.json';
import '../styles/global.css';

const title = "PT Authority Hub - Your personal fitness coach";
const description = "Get a personalised audit and next-step plan within 24 hours (business days). Professional coaching for serious results.";
const canonicalURL = "https://pt-authority-hub-landing.pages.dev";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Social Media -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  
  <AnalyticsPlausible />
</head>
<body class="selection:bg-accent selection:text-bg">
  
  <!-- Skip to content link for accessibility -->
  <a href="#content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-blue-600 focus:text-white focus:rounded">
    Skip to main content
  </a>
  
  <!-- Hero Section -->
  <section id="hero" class="min-h-screen flex items-center pt-24 pb-16 overflow-hidden relative">
    <!-- Subtle Background Glow -->
    <div class="absolute top-1/2 right-0 -translate-y-1/2 w-[500px] h-[500px] bg-accent/5 blur-[120px] rounded-full pointer-events-none"></div>
    
    <Container className="relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Left: Copy -->
        <div class="text-left flex flex-col justify-center">
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 leading-[1.1] tracking-tight text-text">
            Stop Guessing. <br class="hidden sm:block" />
            Start Progressing. <br class="hidden sm:block" />
            Get Your <span class="text-accent">Data-Led</span> Audit and Next-Step Plan.
          </h1>
        <p class="text-lg sm:text-2xl text-muted mb-8 max-w-xl font-medium leading-relaxed sm:text-[18px]">
            Get a personalised audit summary and next-step plan within 24 hours (business days).
          </p>
          
          <div class="flex flex-col items-start gap-4 mb-10">
            <a href="/quiz" class="inline-flex items-center justify-center bg-accent text-bg px-10 py-5 rounded-lg text-xl font-bold hover:brightness-110 transition-all transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-bg min-h-[60px] plausible-event-name=Start+Free+Audit">
              Start Free Audit
            </a>
            <p class="text-sm text-muted ml-2">Takes 2 minutes. No card required. Reply within 24 hours on business days.</p>
          </div>


        </div>

        <!-- Right: Coach Identity -->
        <div class="relative">
          <CoachIdentity />
        </div>
      </div>
    </Container>
  </section>
  
  <!-- Main Content -->
  <main id="content">

  <WhatYouGet />

  <!-- The Why Methodology Section -->
  <section id="the-why" class="py-24 sm:py-32 bg-bg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-xs font-bold text-accent tracking-[0.3em] mb-4">The Methodology</h2>
        <p class="text-3xl sm:text-4xl font-bold text-text">Why this works</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Panel className="p-8 text-center flex flex-col items-center">
          <div class="w-16 h-16 mb-6 bg-accent/10 border border-accent/20 rounded-full flex items-center justify-center text-accent">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Precision Programming</h3>
          <p class="text-muted leading-relaxed text-lg sm:text-[18px]">Data-led programming refined over time based on your check-ins, performance, and consistency.</p>
        </Panel>
        <Panel className="p-8 text-center flex flex-col items-center">
          <div class="w-16 h-16 mb-6 bg-accent/10 border border-accent/20 rounded-full flex items-center justify-center text-accent">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Nutrition Alignment</h3>
          <p class="text-muted leading-relaxed text-lg sm:text-[18px]">Simple, sustainable guidance that supports your goal and fits real life, without extremes or guesswork.</p>
        </Panel>
        <Panel className="p-8 text-center flex flex-col items-center">
          <div class="w-16 h-16 mb-6 bg-accent/10 border border-accent/20 rounded-full flex items-center justify-center text-accent">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Recovery Protocols</h3>
          <p class="text-muted leading-relaxed text-lg sm:text-[18px]">Recovery and stress-management habits that improve consistency, reduce burnout, and help you train better.</p>
        </Panel>
      </div>
    </Container>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="py-24 sm:py-32">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-xs font-bold text-accent tracking-[0.3em] mb-4">The Process</h2>
        <p class="text-3xl sm:text-4xl font-bold text-text">How the Audit Works</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Panel className="text-left flex flex-col items-center text-center p-8">
          <div class="w-16 h-16 mb-6 bg-accent/10 border border-accent/20 rounded-full flex items-center justify-center text-accent">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">1. Complete the 2-minute audit</h3>
          <p class="text-base text-muted mb-2 font-bold italic">Takes 2 minutes</p>
          <p class="text-muted leading-relaxed text-lg sm:text-[18px]">Share your goals, constraints, and current training in our quick audit intake.</p>
        </Panel>
        <Panel className="text-left flex flex-col items-center text-center p-8 border-accent/20 bg-accent/5">
          <div class="w-16 h-16 mb-6 bg-accent/10 border border-accent/20 rounded-full flex items-center justify-center text-accent">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">2. Optional: upload your 30-day summary</h3>
          <p class="text-base text-muted mb-2 font-bold uppercase tracking-widest italic">Within 24 hours</p>
          <p class="text-muted leading-relaxed text-lg sm:text-[18px]">We send your audit summary and next step within 24 hours (business days).</p>
        </Panel>
        <Panel className="text-left flex flex-col items-center text-center p-8">
          <div class="w-16 h-16 mb-6 bg-accent/10 border border-accent/20 rounded-full flex items-center justify-center text-accent">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          </div>
          <h3 class="text-xl font-bold mb-3">3. Receive your audit summary</h3>
          <p class="text-base text-muted mb-2 font-bold uppercase tracking-widest italic">Within 24 hours</p>
          <p class="text-muted leading-relaxed text-lg sm:text-[18px]">If it's a fit, book a call or choose a coaching track to continue.</p>
        </Panel>
      </div>
    </Container>
  </section>

  <!-- Pain & Value Bridge Section -->
  <section id="pain-value-bridge" class="py-24 bg-bg2/50 relative">
    <Container>
      <Panel className="max-w-4xl mx-auto overflow-hidden">
        <div class="grid grid-cols-1 md:grid-cols-2 divide-y md:divide-y-0 md:divide-x divide-white/5">
          <div class="p-8 md:p-12">
            <h3 class="text-xs font-bold text-accent tracking-widest mb-8">Common performance problems we solve</h3>
            <ul class="space-y-4">
              <li class="flex items-start gap-4 text-text text-lg sm:text-[18px]">
                <span class="text-accent">—</span> Not seeing results despite working out regularly?
              </li>
              <li class="flex items-start gap-4 text-text text-lg sm:text-[18px]">
                <span class="text-accent">—</span> Confused about what to eat and when?
              </li>
              <li class="flex items-start gap-4 text-text text-lg sm:text-[18px]">
                <span class="text-accent">—</span> Tired all the time even though you're "healthy"?
              </li>
            </ul>
          </div>
          <div class="p-8 md:p-12 bg-white/[0.02]">
            <h3 class="text-xs font-bold text-accent tracking-widest mb-8">Professional coaching</h3>
            <ul class="space-y-4">
              <li class="flex items-start gap-3 text-text text-base font-medium">
                <span class="text-accent">✓</span> Proven workout plans
              </li>
              <li class="flex items-start gap-3 text-text text-base font-medium">
                <span class="text-accent">✓</span> Smart training that prevents burnout
              </li>
              <li class="flex items-start gap-3 text-text text-base font-medium">
                <span class="text-accent">✓</span> Clear, step-by-step 30-day system
              </li>
            </ul>
          </div>
        </div>
      </Panel>
    </Container>
  </section>

  <!-- Quiz Section -->
  <section id="quiz" class="py-24 bg-bg2/30">
    <Container>
        <!-- Next steps hint -->
        <div class="mb-12 text-center">
          <Badge variant="accent" className="mb-4">Free Performance Audit</Badge>
          <h2 class="text-3xl font-bold text-text mb-4">Tell us about you</h2>
          <p class="text-muted">Takes about 2 minutes. Complete this quick audit so we can reply within 24 hours on business days.</p>
        </div>

        <div class="bg-panel border border-white/5 rounded-xl overflow-hidden p-8 shadow-2xl text-center">
          <p class="text-lg text-text mb-8 italic">Ready to get a clear audit summary and next step?</p>
          <a href="/quiz" class="inline-flex items-center justify-center bg-accent text-bg px-8 py-4 rounded-lg text-lg font-bold hover:brightness-110 transition-all plausible-event-name=Start+Free+Audit">
            Start Free Audit
          </a>
        </div>
      </div>
    </Container>
  </section>



  <!-- Reviews Section -->
  <Testimonials />
  
  <!-- Pricing Section -->
  <section id="pricing" class="py-24 bg-bg2/50">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-xs font-bold text-accent tracking-[0.3em] mb-4">Investment Protocol</h2>
        <p class="text-3xl font-bold text-text mb-4">Transparent Pricing for Serious Results</p>
        <p class="text-muted">{offer.disclaimer}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {offer.tiers.map((tier) => (
          <Panel className={`flex flex-col relative ${tier.highlight ? 'border-accent/40 bg-accent/5 ring-1 ring-accent/20' : 'border-white/5'}`}>
            {tier.highlight && (
              <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-accent text-bg text-[10px] font-bold uppercase tracking-widest px-3 py-1 rounded-full">
                Recommended
              </div>
            )}
            <div class="mb-8">
              <h3 class="text-lg font-bold text-text mb-2 tracking-widest">{tier.name}</h3>
              <div class="flex items-baseline gap-1 mb-4">
                <span class="text-4xl font-bold text-text">{tier.price}</span>
                <span class="text-muted text-sm capitalize">/{tier.period}</span>
              </div>
              <p class="text-base text-muted leading-relaxed">{tier.description}</p>
            </div>
            
            <ul class="space-y-4 mb-10 flex-grow">
              {tier.features.map((feature) => (
                <li class="flex items-start gap-3 text-sm text-muted">
                  <span class="text-accent">✓</span>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            
            <div class="mt-auto">
              <a href="/quiz" class={`w-full text-center py-4 rounded-lg font-bold transition-all block ${tier.highlight ? 'bg-accent text-bg hover:brightness-110' : 'bg-white/5 text-text hover:bg-white/10'}`}>
                {tier.cta}
              </a>
              {tier.ctaSubtext && (
                <p class="text-xs text-muted text-center mt-3">{tier.ctaSubtext}</p>
              )}
            </div>
          </Panel>
        ))}
      </div>
    </Container>
  </section>



  <section id="transformations" class="py-24 bg-bg2/30">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-xs font-bold text-accent tracking-[0.3em] mb-4">Transformations</h2>
        <p class="text-3xl font-bold text-text mb-4">Real Results from Real People</p>
        <p class="text-sm text-muted">Sample results for demonstration. Replace with your client outcomes.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {caseStudies.map((caseStudy) => (
          <Panel className="p-0 overflow-hidden group border-white/5 bg-panel/50">
            <div class="relative aspect-[4/5] bg-muted/20 flex items-center justify-center overflow-hidden">
              <img 
                src={caseStudy.image} 
                alt={`Transformation: ${caseStudy.name}`}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              />
              <div class="absolute top-4 left-4">
                <p class="text-[10px] font-bold text-accent tracking-widest bg-bg/80 backdrop-blur-sm px-2 py-1 rounded">
                  {caseStudy.label}
                </p>
              </div>
              <div class="absolute bottom-4 left-4 right-4 flex flex-wrap gap-2">
                {caseStudy.metrics.map((metric) => (
                  <Badge variant="accent" className="bg-accent text-bg font-bold border-none shadow-lg">
                    {metric}
                  </Badge>
                ))}
              </div>
            </div>
            <div class="p-6">
              <h3 class="font-bold text-lg mb-2 text-text tracking-tight">{caseStudy.name}</h3>
              <p class="text-muted text-sm leading-relaxed italic line-clamp-3">"{caseStudy.quote}"</p>
            </div>
          </Panel>
        ))}
      </div>
    </Container>
  </section>

  <!-- FAQ Section (Rewritten) -->
  <section id="faq" class="py-24">
    <Container>
      <div class="max-w-3xl mx-auto">
        <h2 class="text-xs font-bold text-accent tracking-[0.3em] mb-12 text-center">Frequently asked questions</h2>
        <div class="space-y-4">
          <Panel className="border-white/5">
            <h3 class="font-bold text-text mb-3 tracking-tight text-base italic">Do I need to live in London?</h3>
            <p class="text-muted text-base leading-relaxed sm:text-[18px]">No. While we support London-based sessions, our digital coaching and training plans are delivered globally via our secure platform.</p>
          </Panel>
          <Panel className="border-white/5">
            <h3 class="font-bold text-text mb-3 tracking-tight text-base italic">Do I need fancy equipment?</h3>
            <p class="text-muted text-base leading-relaxed sm:text-[18px]">No. We build your plan around the equipment you already have access to, whether that's a full gym or just a pair of dumbbells at home.</p>
          </Panel>
          <Panel className="border-white/5">
            <h3 class="font-bold text-text mb-3 tracking-tight text-base italic">What if I'm a complete beginner?</h3>
            <p class="text-muted text-base leading-relaxed sm:text-[18px]">That's perfect. Our system is designed to meet you where you are and scale as you become more confident and capable.</p>
          </Panel>
          <Panel className="border-white/5">
            <h3 class="font-bold text-text mb-3 tracking-tight text-base italic">How much time do workouts take?</h3>
            <p class="text-muted text-base leading-relaxed sm:text-[18px]">Most workouts are designed to be completed in 45-60 minutes, though we can adjust this based on your specific daily schedule.</p>
          </Panel>
          <Panel className="border-white/5">
            <h3 class="font-bold text-text mb-3 tracking-tight text-base italic">Can I cancel anytime?</h3>
            <p class="text-muted text-base leading-relaxed sm:text-[18px]">Yes. We don't believe in trapping people in long-term contracts. You can manage your subscription directly from your dashboard.</p>
          </Panel>
          <Panel className="border-white/5">
            <h3 class="font-bold text-text mb-3 tracking-tight text-base italic">What if I have an injury?</h3>
            <p class="text-muted text-base leading-relaxed sm:text-[18px]">We take safety seriously. Your initial intake allows you to specify any injuries so we can adapt your movements accordingly.</p>
          </Panel>
        </div>
      </div>
    </Container>
  </section>

  <!-- Trust & Credibility Block -->
  <section id="trust" class="py-24 bg-bg2/50 border-t border-white/5">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-xs font-bold text-accent tracking-[0.3em] mb-4">Credentials</h2>
          <p class="text-3xl font-bold text-text mb-6">Expertise You Can Trust</p>
          <ul class="space-y-4">
            <li class="flex items-start gap-3 text-muted leading-relaxed sm:text-[18px]">
              <span class="text-accent">✓</span> Certified Performance Specialist (Level 4)
            </li>
            <li class="flex items-start gap-3 text-muted leading-relaxed sm:text-[18px]">
              <span class="text-accent">✓</span> Accredited Nutrition & Metabolic Advisor
            </li>
            <li class="flex items-start gap-3 text-muted leading-relaxed sm:text-[18px]">
              <span class="text-accent">✓</span> 5,000+ Hours of On-Floor Coaching Experience
            </li>
          </ul>
        </div>
        <Panel className="p-8 border-accent/20 bg-accent/5">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center text-accent">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
            </div>
            <h3 class="font-bold text-xl">Security & Satisfaction</h3>
          </div>
          <p class="text-muted text-sm mb-6 leading-relaxed">Encrypted in transit (HTTPS/TLS). Stored securely with restricted access. We also offer a 7-day satisfaction guarantee: not happy? Full refund, no questions asked.</p>
          <div class="flex items-center gap-2">
            <Badge variant="muted">Privacy First</Badge>
            <Badge variant="muted">Secure TLS</Badge>
          </div>
        </Panel>
      </div>
    </Container>
  </section>

  </main>

  <!-- Footer -->
  <footer id="footer" class="py-12 border-t border-white/5 bg-bg">
    <Container>
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <p class="text-[12px] text-muted uppercase tracking-widest font-mono">
          &copy; {new Date().getFullYear()} PT Authority Hub. Professional coaching.
        </p>
        <div class="flex gap-6">
          <a href="/privacy" class="text-[12px] text-muted hover:text-accent uppercase tracking-widest font-mono transition-colors">Privacy</a>
          <a href="/terms" class="text-[12px] text-muted hover:text-accent uppercase tracking-widest font-mono transition-colors">Terms</a>
          <a href="#" class="text-[12px] text-muted hover:text-accent uppercase tracking-widest font-mono transition-colors">Status</a>
        </div>
      </div>
    </Container>
  </footer>


</body>
</html>
