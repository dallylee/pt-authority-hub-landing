---
export const prerender = false;

import AnalyticsPlausible from '../../components/AnalyticsPlausible.astro';
// Note: In production, this page will be server-rendered with D1 data
// For initial implementation, we'll use client-side fetch
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lead Inbox - PT Console</title>
  <AnalyticsPlausible />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #0a0a0a;
      color: #e5e5e5;
      min-height: 100vh;
    }
    nav {
      background: #1a1a1a;
      border-bottom: 1px solid #2a2a2a;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    nav h1 {
      font-size: 18px;
      color: #00ff88;
    }
    nav button {
      padding: 8px 16px;
      background: transparent;
      border: 1px solid #2a2a2a;
      border-radius: 6px;
      color: #888;
      font-size: 13px;
      cursor: pointer;
    }
    nav button:hover {
      border-color: #ff4444;
      color: #ff4444;
    }
    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 24px;
    }
    .header {
      margin-bottom: 24px;
    }
    .header h2 {
      font-size: 24px;
      margin-bottom: 16px;
    }
    .filters {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }
    .filters select {
      padding: 8px 12px;
      background: #1a1a1a;
      border: 1px solid #2a2a2a;
      border-radius: 6px;
      color: #ccc;
      font-size: 13px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #1a1a1a;
      border: 1px solid #2a2a2a;
      border-radius: 8px;
      overflow: hidden;
    }
    th {
      text-align: left;
      padding: 12px 16px;
      background: #0a0a0a;
      font-size: 12px;
      font-weight: 600;
      color: #888;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    td {
      padding: 16px;
      border-top: 1px solid #2a2a2a;
      font-size: 14px;
    }
    tr:hover {
      background: #222;
    }
    .badge {
      display: inline-block;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
    }
    .badge.hot { background: rgba(255, 68, 68, 0.2); color: #ff4444; }
    .badge.warm { background: rgba(255, 184, 0, 0.2); color: #ffb800; }
    .badge.nurture { background: rgba(0, 136, 255, 0.2); color: #0088ff; }
    .badge.disqualified { background: rgba(136, 136, 136, 0.2); color: #888; }
    .empty {
      text-align: center;
      padding: 48px;
      color: #666;
    }
    a {
      color: #00ff88;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <nav>
    <h1>PT Console</h1>
    <form action="/api/auth/logout" method="POST">
      <button type="submit">Logout</button>
    </form>
  </nav>

  <div class="container">
    <div class="header">
      <h2>Lead Inbox</h2>
      <div class="filters">
        <select id="segment-filter">
          <option value="">All Segments</option>
          <option value="HOT">Hot</option>
          <option value="WARM">Warm</option>
          <option value="NURTURE">Nurture</option>
          <option value="DISQUALIFIED">Disqualified</option>
        </select>
        <select id="upload-filter">
          <option value="">All Upload Status</option>
          <option value="PENDING">Pending</option>
          <option value="RECEIVED">Received</option>
          <option value="NONE">None</option>
        </select>
      </div>
    </div>

    <table id="leads-table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Name</th>
          <th>Email</th>
          <th>Segment</th>
          <th>Score</th>
          <th>Goal</th>
          <th>Start</th>
          <th>Budget</th>
          <th>Bottleneck</th>
          <th>Upload</th>
        </tr>
      </thead>
      <tbody id="leads-tbody">
        <tr>
          <td colspan="10" class="empty">Loading leads...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <script>
    const tbody = document.getElementById('leads-tbody');

    function pick(obj, keys) {
      for (const k of keys) {
        if (obj && obj[k] !== undefined && obj[k] !== null && String(obj[k]).trim() !== "") return obj[k];
      }
      return "";
    }

    function esc(s) {
      return String(s).replace(/[&<>"']/g, (c) => ({ "&":"&amp;","<":"&lt;",">":"&gt;",'"':"&quot;","'":"&#039;" }[c]));
    }

    function renderEmpty(msg) {
      tbody.innerHTML = `
        <tr>
          <td colspan="10" class="empty">${esc(msg)}</td>
        </tr>
      `;
    }

    function renderRows(leads) {
      if (!Array.isArray(leads) || leads.length === 0) {
        renderEmpty("No leads yet. Submit the quiz to create your first lead.");
        return;
      }

      function formatDate(d) {
        if (!d) return '-';
        try {
          const date = new Date(d);
          return date.toLocaleDateString('en-GB', { day: '2-digit', month: 'short' });
        } catch { return d; }
      }

      function getBadge(segment) {
        const s = (segment || '').toUpperCase();
        const cls = s === 'HOT' ? 'hot' : s === 'WARM' ? 'warm' : s === 'NURTURE' ? 'nurture' : s === 'DISQUALIFIED' ? 'disqualified' : '';
        return `<span class="badge ${cls}">${esc(s || '-')}</span>`;
      }

      function getUploadBadge(status) {
        const s = (status || '').toUpperCase();
        if (s === 'RECEIVED') return `<span style="color:#00ff88;">✓</span>`;
        if (s === 'PENDING') return `<span style="color:#ffb800;">⏳</span>`;
        return '-';
      }

      tbody.innerHTML = leads.map((lead) => {
        const id = lead.id || '';
        const date = formatDate(lead.created_at);
        const name = lead.client_first_name || '-';
        const email = lead.client_email || '';
        const segment = lead.triage_segment || '';
        const score = lead.triage_score ?? '-';
        const goal = lead.goal || '-';
        const start = lead.start_timeline || '-';
        const budget = lead.budget_monthly || '-';
        const bottleneck = lead.inferred_bottleneck || '-';
        const upload = lead.upload_status || 'NONE';

        return `
          <tr style="cursor:pointer;" onclick="window.location='/pt/leads/${encodeURIComponent(id)}'">
            <td>${esc(date)}</td>
            <td><a href="/pt/leads/${encodeURIComponent(id)}" style="color:#00ff88;">${esc(name)}</a></td>
            <td style="font-size:12px;">${esc(email)}</td>
            <td>${getBadge(segment)}</td>
            <td>${esc(score)}</td>
            <td>${esc(goal)}</td>
            <td style="font-size:12px;">${esc(start)}</td>
            <td style="font-size:12px;">${esc(budget)}</td>
            <td style="font-size:12px;">${esc(bottleneck)}</td>
            <td style="text-align:center;">${getUploadBadge(upload)}</td>
          </tr>
        `;
      }).join("");
    }

    async function loadLeads() {
      try {
        renderEmpty("Loading leads...");
        
        // Get filter values
        const segmentFilter = document.getElementById('filter-segment')?.value || '';
        const uploadFilter = document.getElementById('filter-upload')?.value || '';
        
        // Build URL with filters
        let url = "/api/pt/leads?limit=50";
        if (segmentFilter) url += `&segment=${encodeURIComponent(segmentFilter)}`;
        if (uploadFilter) url += `&upload_status=${encodeURIComponent(uploadFilter)}`;
        
        const res = await fetch(url, { headers: { "Accept": "application/json" } });
        const data = await res.json();
        if (!res.ok || !data.ok) {
          renderEmpty(data?.error ? `Error: ${data.error}` : "Failed to load leads.");
          return;
        }
        renderRows(data.leads);
      } catch (e) {
        renderEmpty("Failed to load leads.");
      }
    }

    // Wire up filter change events
    document.getElementById('filter-segment')?.addEventListener('change', loadLeads);
    document.getElementById('filter-upload')?.addEventListener('change', loadLeads);

    loadLeads();
  </script>
</body>
</html>
