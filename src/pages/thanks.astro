---
import BookingCTA from '../components/BookingCTA.astro';
import AnalyticsPlausible from '../components/AnalyticsPlausible.astro';
import Container from '../components/Container.astro';
import Panel from '../components/Panel.astro';
import Badge from '../components/Badge.astro';
import '../styles/global.css';

const title = "Intake complete - PT Authority Hub";
const description = "Your information has been received. We'll be in touch within 24 hours.";
const canonicalURL = "https://pt-authority-hub-landing.pages.dev/thanks/";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Social Media -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />

  <AnalyticsPlausible />
</head>
<body class="selection:bg-accent selection:text-bg">
  
  <!-- Thank You Content -->
  <section class="min-h-screen flex items-center py-24">
    <Container>
      <div class="max-w-2xl mx-auto">
        <Panel className="text-center border-accent/10">
          <!-- Status Icon -->
          <div class="mb-8">
            <div class="w-20 h-20 mx-auto bg-accent/10 border border-accent/20 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
          </div>

          <Badge variant="accent" className="mb-4">Received</Badge>
          <h1 class="text-3xl md:text-5xl font-bold text-text mb-6 tracking-tight">
            Intake complete.
          </h1>
          
          <div class="bg-bg2/50 border border-white/5 rounded-lg p-6 mb-10 text-left">
            <p class="text-muted leading-relaxed">
              We've received your information. Your personalized fitness plan is being built and will be delivered to your inbox <strong>within 24 hours</strong>.
            </p>
          </div>

          <div class="mb-10 text-left">
            <h2 class="text-xs font-bold text-muted2 uppercase tracking-widest mb-6">What happens next</h2>
            <ul class="space-y-4 text-sm text-muted">
              <li class="flex items-start gap-4">
                <span class="w-6 h-6 rounded-full bg-accent/10 border border-accent/20 flex items-center justify-center text-accent text-xs font-bold flex-shrink-0 mt-1">1</span>
                <div>
                  <h3 class="text-text font-bold mb-1">Check your inbox</h3>
                  <p class="text-sm text-muted">You'll receive a confirmation email shortly with your next steps.</p>
                </div>
              </li>
              <li class="flex items-start gap-4">
                <span class="w-6 h-6 rounded-full bg-accent/10 border border-accent/20 flex items-center justify-center text-accent text-xs font-bold flex-shrink-0 mt-1">2</span>
                <div>
                  <h3 class="text-text font-bold mb-1">Review your plan</h3>
                  <p class="text-sm text-muted">Within 24 hours, you'll receive your custom 30-day training roadmap.</p>
                </div>
              </li>
            </ul>
          </div>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
            <BookingCTA variant="primary" />
            <a 
              href="/" 
              class="inline-block border border-white/10 text-muted hover:text-text hover:bg-white/5 px-8 py-4 rounded-lg text-sm font-bold transition-all uppercase tracking-widest"
            >
              Return to hub
            </a>
          </div>

          <p class="text-[10px] text-muted2 uppercase tracking-[0.2em]">
            Coaching advice only. Data deleted in 30 days.
          </p>
        </Panel>
      </div>
    </Container>
  </section>

</body>
</html>
