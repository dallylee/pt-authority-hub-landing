---
import BookingCTA from '../components/BookingCTA.astro';
import AnalyticsPlausible from '../components/AnalyticsPlausible.astro';
import Container from '../components/Container.astro';
import Panel from '../components/Panel.astro';
import Badge from '../components/Badge.astro';
import '../styles/global.css';

const title = "Thank You - PT Authority Hub";
const description = "Thank you for your submission. We'll be in touch soon with your personalized Performance Audit.";
const canonicalURL = "https://pt-authority-hub-landing.pages.dev/thanks/";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Social Media -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />

  <AnalyticsPlausible />
</head>
<body class="selection:bg-accent selection:text-bg">
  
  <!-- Thank You Content -->
  <section class="min-h-screen flex items-center py-24">
    <Container>
      <div class="max-w-2xl mx-auto">
        <Panel className="text-center border-accent/10">
          <!-- Status Icon -->
          <div class="mb-8">
            <div class="w-20 h-20 mx-auto bg-accent/10 border border-accent/20 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
          </div>

          <Badge variant="accent" className="mb-4">Received</Badge>
          <h1 class="text-3xl md:text-5xl font-bold text-text mb-6 tracking-tight">
            Signal Intake Complete.
          </h1>

          <div class="bg-bg2/50 border border-white/5 rounded-lg p-6 mb-10 text-left">
            <p class="text-muted leading-relaxed">
              Your Performance Audit is being generated via our clinical framework. You will receive the protocol <strong>within 24 hours</strong>.
            </p>
          </div>

          <div class="mb-10 text-left">
            <h2 class="text-xs font-bold text-muted2 uppercase tracking-widest mb-6">Immediate Sequence</h2>
            <ul class="space-y-4 text-sm text-muted">
              <li class="flex items-start gap-3">
                <span class="text-accent font-bold">/</span>
                <span>Watch for your Performance Audit by email <strong>within 24 hours</strong>.</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-accent font-bold">/</span>
                <span>Check spam folder and whitelist our communication signal.</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-accent font-bold">/</span>
                <span>Optional: Book a 15-minute consultation to discuss goals.</span>
              </li>
            </ul>
          </div>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
            <BookingCTA variant="primary" />
            <a 
              href="/" 
              class="inline-block border border-white/10 text-muted hover:text-text hover:bg-white/5 px-8 py-4 rounded-lg text-lg font-bold transition-all font-mono uppercase tracking-widest text-xs"
            >
              Return to Hub
            </a>
          </div>

          <p class="text-[10px] text-muted2 uppercase tracking-[0.2em]">
            Protocol is guidance only. Clinical deletion in 30 days.
          </p>
        </Panel>
      </div>
    </Container>
  </section>

</body>
</html>
