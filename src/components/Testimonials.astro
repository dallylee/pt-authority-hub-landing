---
import testimonials from '../data/testimonials.json';
import Panel from './Panel.astro';
import Container from './Container.astro';
import Badge from './Badge.astro';

const googleReviewsUrl = import.meta.env.PUBLIC_GOOGLE_REVIEWS_URL;
const googleReviewsLabel = import.meta.env.PUBLIC_GOOGLE_REVIEWS_LABEL || 'Evidence Repository';

interface Testimonial {
  name: string;
  descriptor: string;
  quote: string;
  outcome?: string;
}
---

<section id="testimonials" class="py-24 bg-bg2/30">
  <Container>
    <h2 class="text-xs font-bold text-accent uppercase tracking-[0.3em] mb-12 text-center">Case Signals</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
      {testimonials.map((item: Testimonial) => (
        <Panel className="flex flex-col h-full border-white/5 bg-panel/50">
          <blockquote class="flex-grow">
            <p class="text-muted italic mb-8 text-lg leading-relaxed">"{item.quote}"</p>
          </blockquote>
          
          <div class="mt-auto pt-6 border-t border-white/5">
            <div class="flex items-center justify-between">
              <div>
                <p class="font-bold text-text uppercase tracking-tight text-sm">{item.name}</p>
                <p class="text-[10px] text-muted2 uppercase tracking-widest font-mono mt-1">{item.descriptor}</p>
              </div>
              {item.outcome && (
                <Badge variant="muted">{item.outcome}</Badge>
              )}
            </div>
          </div>
        </Panel>
      ))}
    </div>

    <div class="mt-16 text-center">
      {googleReviewsUrl ? (
        <a 
          href={googleReviewsUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 bg-transparent text-muted2 hover:text-accent px-6 py-3 rounded-lg border border-white/10 hover:border-accent/20 transition-all font-mono uppercase tracking-[0.2em] text-[10px]"
        >
          <span class="text-accent/60">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.48 10.92v3.28h4.69c-.19 1.02-.78 1.88-1.63 2.45v2.04h2.64c1.55-1.42 2.44-3.51 2.44-5.99 0-.57-.05-1.13-.15-1.78H12.48z" />
              <path d="M12.48 24c3.24 0 5.95-1.08 7.93-2.91l-2.64-2.04c-1.11.75-2.53 1.19-3.92 1.19-3.02 0-5.58-2.04-6.5-4.78H4.62v2.1c2.1 4.19 6.45 7.12 11.48 7.12z" />
              <path d="M5.98 15.46c-.24-.7-.37-1.44-.37-2.21s.13-1.51.37-2.21V8.94H4.62C3.81 10.56 3.48 12.28 3.48 14s.33 3.44 1.14 5.06l1.36-1.6z" />
              <path d="M12.48 4.75c1.76 0 3.35.61 4.6 1.8l3.42-3.42C18.33 1.19 15.72 0 12.48 0 7.45 0 3.1 2.93 1 7.12l4.98 3.92c.92-2.74 3.48-4.75 6.5-6.75z" />
            </svg>
          </span>
          {googleReviewsLabel}
        </a>
      ) : (
        <p class="text-muted2 text-[10px] uppercase tracking-widest font-mono italic">Evidence Repository Offline</p>
      )}
    </div>
  </Container>
</section>
