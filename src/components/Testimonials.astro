---
/**
 * TODO: replace with real testimonials in src/data/testimonials.json
 */
import testimonials from '../data/testimonials.json';

const googleReviewsUrl = import.meta.env.PUBLIC_GOOGLE_REVIEWS_URL;
const googleReviewsLabel = import.meta.env.PUBLIC_GOOGLE_REVIEWS_LABEL || 'View all reviews on Google';

interface Testimonial {
  name: string;
  descriptor: string;
  quote: string;
  outcome?: string;
}
---

<section id="testimonials" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">What Our Clients Say</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      {testimonials.map((item: Testimonial) => (
        <article class="bg-white p-8 rounded-xl shadow-sm border border-gray-100 flex flex-col h-full">
          <blockquote class="flex-grow">
            <p class="text-gray-700 italic mb-6 text-lg">"{item.quote}"</p>
          </blockquote>
          
          <div class="mt-auto pt-6 border-t border-gray-50">
            <div class="flex items-center justify-between">
              <div>
                <p class="font-bold text-gray-900">{item.name}</p>
                <p class="text-sm text-gray-500">{item.descriptor}</p>
              </div>
              {item.outcome && (
                <span class="bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-0.5 rounded-full">
                  {item.outcome}
                </span>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-12 text-center">
      {googleReviewsUrl ? (
        <a 
          href={googleReviewsUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-white text-gray-700 px-6 py-3 rounded-lg border border-gray-200 font-medium hover:bg-gray-50 transition shadow-sm"
        >
          <span class="text-blue-500">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.48 10.92v3.28h4.69c-.19 1.02-.78 1.88-1.63 2.45v2.04h2.64c1.55-1.42 2.44-3.51 2.44-5.99 0-.57-.05-1.13-.15-1.78H12.48z" />
              <path d="M12.48 24c3.24 0 5.95-1.08 7.93-2.91l-2.64-2.04c-1.11.75-2.53 1.19-3.92 1.19-3.02 0-5.58-2.04-6.5-4.78H4.62v2.1c2.1 4.19 6.45 7.12 11.48 7.12z" />
              <path d="M5.98 15.46c-.24-.7-.37-1.44-.37-2.21s.13-1.51.37-2.21V8.94H4.62C3.81 10.56 3.48 12.28 3.48 14s.33 3.44 1.14 5.06l1.36-1.6z" />
              <path d="M12.48 4.75c1.76 0 3.35.61 4.6 1.8l3.42-3.42C18.33 1.19 15.72 0 12.48 0 7.45 0 3.1 2.93 1 7.12l4.98 3.92c.92-2.74 3.48-4.75 6.5-6.75z" />
            </svg>
          </span>
          {googleReviewsLabel}
        </a>
      ) : (
        <p class="text-gray-400 text-sm italic">Google reviews link not configured yet.</p>
      )}
    </div>
  </div>
</section>
